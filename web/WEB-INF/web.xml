<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>webShopAccountFilter</filter-name>
        <filter-class>com.cn.controller.webShopAccountFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>webShopAccountFilter</filter-name>
        <url-pattern>/webShop.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ReadAllMerchandisesFilter</filter-name>
        <filter-class>com.cn.controller.ReadAllMerchandisesFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ReadAllMerchandisesFilter</filter-name>
        <url-pattern>/webShop.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>com.cn.controller.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/SignInForm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CheckUserServlet</servlet-name>
        <servlet-class>com.cn.controller.CheckUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckUserServlet</servlet-name>
        <url-pattern>/CheckUserForm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PurchasingServlet</servlet-name>
        <servlet-class>com.cn.controller.PurchasingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchasingServlet</servlet-name>
        <url-pattern>/webShopForm</url-pattern>
    </servlet-mapping>
</web-app>